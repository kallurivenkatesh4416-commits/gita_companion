APP_NAME=Gita Companion API
ENVIRONMENT=dev

# ── Database ────────────────────────────────────────────────────────────────
# NEVER commit real credentials. Use a strong random password in production.
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DATABASE_URL=postgresql+psycopg://postgres:CHANGE_ME@localhost:5432/gita_companion

# ── Security ────────────────────────────────────────────────────────────────
# Set a strong random value to require X-API-Key on all non-health endpoints.
# Leave empty to run without auth (local dev only).
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
CLIENT_API_KEY=

# ── Rate limits (requests per minute per IP) ────────────────────────────────
RATE_LIMIT_ASK=20/minute
RATE_LIMIT_CHAT=30/minute
RATE_LIMIT_MOOD=20/minute

# ── LLM providers ───────────────────────────────────────────────────────────
# Keep secrets only in backend/.env (never in Flutter client code).
# If a key is exposed, revoke/rotate it in the provider console IMMEDIATELY
# before setting new values here.
USE_MOCK_PROVIDER=true

# Gemini (optional)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash

# Ollama local chat (optional)
USE_OLLAMA_PROVIDER=false
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b

# Claude / Anthropic (optional)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-6

# OpenAI / Codex (optional)
OPENAI_API_KEY=
CODEX_MODEL=gpt-4o-mini

# Query router default when scores tie: claude | codex | mock
DEFAULT_LLM=claude

# ── Retrieval tuning ─────────────────────────────────────────────────────────
RETRIEVAL_TOP_K=3
RETRIEVAL_SIMILARITY_THRESHOLD=0.75

# ── Feature flags ────────────────────────────────────────────────────────────
FEATURE_JOURNEYS_ENABLED=false

# ── Misc ─────────────────────────────────────────────────────────────────────
EMBEDDING_DIM=384
CACHE_TTL_SECONDS=300
# PRODUCTION_DOMAIN=https://gita.yourdomain.com
